<body>
  <h2>Base64 + Gzip Decoder</h2>
  <textarea id="input" placeholder="Paste Base64 Gzipped string here..."></textarea><br>
  <button onclick="decode()">Decode</button>
  <textarea id="output" placeholder="Decoded output will appear here..."></textarea>

  <script>
    function tryParseKVString(text) {
      const obj = {};
      const pairs = text.split('&');
      for (const pair of pairs) {
        const [key, value] = pair.split('=');
        if (key) {
          obj[decodeURIComponent(key)] = decodeURIComponent(value || '');
        }
      }
      return obj;
    }

    function decode() {
      try {
        const input = document.getElementById('input').value.trim();
        const binary = atob(input);
        const bytes = new Uint8Array([...binary].map(c => c.charCodeAt(0)));
        let result = pako.ungzip(bytes, { to: 'string' });

        try {
          // First try JSON
          const json = JSON.parse(result);
          result = JSON.stringify(json, null, 2);
        } catch (e) {
          // Try parsing as key=value&key2=value2
          const kv = tryParseKVString(result);
          result = JSON.stringify(kv, null, 2);
        }

        document.getElementById('output').value = result;
      } catch (e) {
        alert('Error: ' + e.message);
      }
    }
  </script>
</body>
</html>