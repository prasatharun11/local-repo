private void disableHostnameVerification(Object proxy) {
    HttpURLConnection.setDefaultHostnameVerifier((hostname, session) -> true);
    
    Client client = ClientProxy.getClient(proxy);
    HTTPConduit httpConduit = (HTTPConduit) client.getConduit();
    
    // TLS configuration
    TLSClientParameters tlsCP = new TLSClientParameters();
    tlsCP.setDisableCNCheck(true);
    tlsCP.setHostnameVerifier((hostname, session) -> true);
    httpConduit.setTlsClientParameters(tlsCP);

    // HTTP policy configuration
    HTTPClientPolicy policy = new HTTPClientPolicy();
    policy.setConnectionTimeout(240000);
    policy.setReceiveTimeout(240000);
    policy.setAllowChunking(false);  // This is KEY for CXF 4.1.3
    
    // Try to disable auto redirect
    try {
        policy.setAutoRedirect(false);
    } catch (Exception e) {
        // Might not exist
    }
    
    httpConduit.setClient(policy);
    
    // THIS IS THE CORRECT WAY FOR CXF 4.1.3:
    // Set request context properties on the client
    Map<String, Object> requestContext = client.getRequestContext();
    
    // Create headers map
    Map<String, List<String>> headers = new HashMap<>();
    headers.put("Connection", Arrays.asList("close"));
    headers.put("Pragma", Arrays.asList("no-cache"));
    headers.put("Cache-Control", Arrays.asList("no-cache, no-store"));
    
    // Set headers in request context
    requestContext.put(Message.PROTOCOL_HEADERS, headers);
    
    // Also try these context properties
    requestContext.put("org.apache.cxf.transport.http.connection.close", Boolean.TRUE);
    requestContext.put("disable.outputstream.optimization", Boolean.TRUE);
}