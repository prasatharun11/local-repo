  <meta charset="UTF-8">
  <title>Actuator URL Checker</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background: #f9f9f9;
    }
    textarea {
      width: 100%;
      height: 120px;
      padding: 10px;
      font-size: 14px;
    }
    button {
      margin: 10px 0;
      padding: 10px 18px;
      border: none;
      border-radius: 6px;
      background: #007bff;
      color: white;
      font-size: 14px;
      cursor: pointer;
    }
    button:hover {
      background: #0056b3;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background: white;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    th, td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: left;
    }
    th {
      background: #f1f1f1;
    }
    .ok {
      color: green;
      font-weight: bold;
    }
    .fail {
      color: red;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h2>Actuator URL Status Checker</h2>
  <p>Enter one URL per line:</p>
  <textarea id="urlList" placeholder="http://localhost:8080/actuator/health&#10;http://localhost:8081/actuator/info"></textarea><br>
  <button onclick="checkUrls()">Check Status</button>

  <table id="results">
    <thead>
      <tr>
        <th>URL</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    async function checkUrls() {
      const urls = document.getElementById("urlList").value
        .split("\n")
        .map(u => u.trim())
        .filter(u => u);

      const tbody = document.querySelector("#results tbody");
      tbody.innerHTML = "";

      try {
        const response = await fetch("http://localhost:3000/check", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ urls })
        });

        const results = await response.json();

        results.forEach(result => {
          const row = document.createElement("tr");
          const urlCell = document.createElement("td");
          urlCell.textContent = result.url;
          const statusCell = document.createElement("td");

          if (result.status === 200) {
            statusCell.textContent = "200 OK";
            statusCell.className = "ok";
          } else {
            statusCell.textContent = `${result.status} ${result.statusText}`;
            statusCell.className = "fail";
          }

          row.appendChild(urlCell);
          row.appendChild(statusCell);
          tbody.appendChild(row);
        });
      } catch (err) {
        alert("Error connecting to proxy server: " + err.message);
      }
    }
  </script>
</body>
</html>