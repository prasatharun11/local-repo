<body>
    <div class="container">
        <div class="header">
            <h1>üè• Server Health Monitor</h1>
            <p class="subtitle">Real-time monitoring of Spring Boot Actuator endpoints</p>
        </div>

        <div class="config-section">
            <h2>‚öôÔ∏è Server Configuration</h2>
            <textarea id="serverConfig" placeholder="Enter server URLs, one per line in format: ServerName | http://server.com/actuator/health">Server 1 | http://localhost:8080/actuator/health
Server 2 | http://localhost:8081/actuator/health
Server 3 | http://localhost:8082/actuator/health</textarea>
            <div class="config-help">
                üí° Enter each server on a new line in format: <strong>Server Name | URL</strong>
            </div>
        </div>

        <div class="controls">
            <button class="btn btn-primary" id="checkAllBtn" onclick="checkAllServers()">
                üîÑ Check All Servers
            </button>
            <button class="btn btn-secondary" onclick="clearResults()">
                üóëÔ∏è Clear Results
            </button>
            <div class="summary">
                <div class="summary-item summary-up">
                    <span>‚úÖ Up:</span>
                    <strong id="upCount">0</strong>
                </div>
                <div class="summary-item summary-down">
                    <span>‚ùå Down:</span>
                    <strong id="downCount">0</strong>
                </div>
                <div class="summary-item summary-pending">
                    <span>‚è≥ Pending:</span>
                    <strong id="pendingCount">0</strong>
                </div>
            </div>
        </div>

        <div class="servers-grid" id="serversGrid"></div>

        <div class="last-checked" id="lastChecked"></div>
    </div>

    <script>
        let servers = [];
        let checkTimeout = 10000; // 10 seconds timeout

        function parseServerConfig() {
            const config = document.getElementById('serverConfig').value;
            const lines = config.split('\n').filter(line => line.trim());
            
            servers = lines.map((line, index) => {
                const parts = line.split('|').map(p => p.trim());
                if (parts.length === 2) {
                    return {
                        name: parts[0],
                        url: parts[1]
                    };
                } else if (parts.length === 1 && parts[0]) {
                    return {
                        name: `Server ${index + 1}`,
                        url: parts[0]
                    };
                }
                return null;
            }).filter(server => server !== null);

            updateSummary();
        }

        function createServerCard(server, index) {
            return `
                <div class="server-card" id="server-${index}">
                    <div class="server-header">
                        <div class="server-name">${server.name}</div>
                        <span class="status-badge status-pending">Pending</span>
                    </div>
                    <div class="server-url">${server.url}</div>
                    <div class="server-details" id="details-${index}">
                        <div class="detail-row">
                            <span class="detail-label">Status:</span>
                            <span class="detail-value">Not checked yet</span>
                        </div>
                    </div>
                </div>
            `;
        }

        function updateServerCard(index, status, data, error) {
            const card = document.getElementById(`server-${index}`);
            const details = document.getElementById(`details-${index}`);
            
            card.className = `server-card ${status}`;
            
            let statusBadge = card.querySelector('.status-badge');
            if (status === 'up') {
                statusBadge.className = 'status-badge status-up';
                statusBadge.innerHTML = '‚úÖ UP';
            } else if (status === 'down') {
                statusBadge.className = 'status-badge status-down';
                statusBadge.innerHTML = '‚ùå DOWN';
            } else if (status === 'checking') {
                statusBadge.className = 'status-badge status-checking';
                statusBadge.innerHTML = '<span class="loader"></span> Checking...';
            }

            let detailsHTML = '';
            
            if (status === 'up' && data) {
                detailsHTML = `
                    <div class="detail-row">
                        <span class="detail-label">Status:</span>
                        <span class="detail-value" style="color: #28a745; font-weight: 600;">${data.status || 'UP'}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Response Time:</span>
                        <span class="detail-value">${data.responseTime || 'N/A'}</span>
                    </div>
                `;
                
                if (data.components) {
                    detailsHTML += `
                        <div class="detail-row">
                            <span class="detail-label">Components:</span>
                            <span class="detail-value">${Object.keys(data.components).length}</span>
                        </div>
                    `;
                }
            } else if (status === 'down') {
                detailsHTML = `
                    <div class="detail-row">
                        <span class="detail-label">Status:</span>
                        <span class="detail-value" style="color: #dc3545; font-weight: 600;">DOWN</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Error:</span>
                        <span class="detail-value">${error || 'Connection failed'}</span>
                    </div>
                `;
            }
            
            details.innerHTML = detailsHTML;
        }

        async function checkServer(server, index) {
            updateServerCard(index, 'checking');
            
            const startTime = Date.now();
            
            try {
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), checkTimeout);
                
                const response = await fetch(server.url, {
                    method: 'GET',
                    signal: controller.signal,
                    headers: {
                        'Accept': 'application/json'
                    }
                });
                
                clearTimeout(timeoutId);
                const responseTime = Date.now() - startTime;
                
                if (response.ok) {
                    const data = await response.json();
                    data.responseTime = `${responseTime}ms`;
                    updateServerCard(index, 'up', data);
                    return 'up';
                } else {
                    updateServerCard(index, 'down', null, `HTTP ${response.status}: ${response.statusText}`);
                    return 'down';
                }
            } catch (error) {
                let errorMessage = 'Connection failed';
                if (error.name === 'AbortError') {
                    errorMessage = 'Request timeout (>10s)';
                } else if (error.message) {
                    errorMessage = error.message;
                }
                updateServerCard(index, 'down', null, errorMessage);
                return 'down';
            }
        }

        async function checkAllServers() {
            parseServerConfig();
            
            if (servers.length === 0) {
                alert('Please configure at least one server URL');
                return;
            }

            const grid = document.getElementById('serversGrid');
            grid.innerHTML = servers.map((server, index) => createServerCard(server, index)).join('');
            
            const btn = document.getElementById('checkAllBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="loader"></span> Checking...';
            
            const promises = servers.map((server, index) => checkServer(server, index));
            await Promise.all(promises);
            
            btn.disabled = false;
            btn.innerHTML = 'üîÑ Check All Servers';
            
            updateSummary();
            updateLastChecked();
        }

        function updateSummary() {
            const cards = document.querySelectorAll('.server-card');
            let upCount = 0;
            let downCount = 0;
            let pendingCount = 0;
            
            cards.forEach(card => {
                if (card.classList.contains('up')) upCount++;
                else if (card.classList.contains('down')) downCount++;
                else pendingCount++;
            });
            
            document.getElementById('upCount').textContent = upCount;
            document.getElementById('downCount').textContent = downCount;
            document.getElementById('pendingCount').textContent = pendingCount;
        }

        function updateLastChecked() {
            const now = new Date();
            const formatted = now.toLocaleString();
            document.getElementById('lastChecked').textContent = `Last checked: ${formatted}`;
        }

        function clearResults() {
            document.getElementById('serversGrid').innerHTML = '';
            document.getElementById('lastChecked').textContent = '';
            document.getElementById('upCount').textContent = '0';
            document.getElementById('downCount').textContent = '0';
            document.getElementById('pendingCount').textContent = '0';
        }

        // Initialize on load
        window.onload = function() {
            parseServerConfig();
        };
    </script>
</body>
</html>