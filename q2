SELECT 
    P.POLICY_NO,
    RTRIM(
        XMLCAST(
            XMLAGG(
                XMLELEMENT(NAME E, I.ISSUING_OFFICE_COUNTRY_CODE || ', ')
                ORDER BY I.ISSUING_OFFICE_COUNTRY_CODE
            ) AS CLOB(10000)
        ),
        ', '
    ) AS ISSUING_COUNTRIES,
    RTRIM(
        XMLCAST(
            XMLAGG(
                XMLELEMENT(NAME E, I.PRODUCING_OFFICE_COUNTRY_CODE || ', ')
                ORDER BY I.PRODUCING_OFFICE_COUNTRY_CODE
            ) AS CLOB(10000)
        ),
        ', '
    ) AS PRODUCING_COUNTRIES
FROM POLICY_TABLE P
JOIN (
    SELECT DISTINCT POLICY_NO, ISSUING_OFFICE_COUNTRY_CODE, PRODUCING_OFFICE_COUNTRY_CODE
    FROM POLICY_TABLE
) I
ON P.POLICY_NO = I.POLICY_NO
GROUP BY P.POLICY_NO;