<script>
// =======================
// ðŸ‘‰ CONFIGURE SERVICES HERE
// =======================
const services = [
    { name: "User Service", url: "https://example.com/user-service" },
    { name: "Order Service", url: "https://example.com/order-service" },
    { name: "Payment Service", url: "https://example.com/payment-service" }

    // Add remaining services here (up to 15 or more)
];

const TIMEOUT_MS = 8000;

// =======================
// TABLE INIT
// =======================
const tbody = document.querySelector("#healthTable tbody");

function initTable() {
    tbody.innerHTML = "";

    services.forEach((svc, index) => {
        const row = document.createElement("tr");

        row.innerHTML = `
            <td>${svc.name}</td>
            <td>${svc.url}</td>
            <td class="loading" id="status-${index}">Not Checked</td>
            <td id="time-${index}">-</td>
        `;

        tbody.appendChild(row);
    });
}

initTable();

// =======================
// HEALTH CHECK LOGIC
// =======================
async function fetchWithTimeout(resource, options = {}) {
    const { timeout = TIMEOUT_MS } = options;

    const controller = new AbortController();
    const id = setTimeout(() => controller.abort(), timeout);

    try {
        const response = await fetch(resource, {
            ...options,
            signal: controller.signal
        });
        clearTimeout(id);
        return response;
    } catch (error) {
        clearTimeout(id);
        throw error;
    }
}

function updateStatus(index, statusText, cssClass) {
    const el = document.getElementById(`status-${index}`);
    el.className = `status ${cssClass}`;
    el.textContent = statusText;

    document.getElementById(`time-${index}`).textContent =
        new Date().toLocaleTimeString();
}

async function checkService(service, index) {
    try {
        updateStatus(index, "Checking...", "loading");

        const res = await fetchWithTimeout(
            service.url.replace(/\/$/, "") + "/actuator/health"
        );

        if (!res.ok) {
            updateStatus(index, "DOWN", "DOWN");
            return;
        }

        const data = await res.json();

        if (data.status && data.status.toUpperCase() === "UP") {
            updateStatus(index, "UP", "UP");
        } else {
            updateStatus(index, "DOWN", "DOWN");
        }

    } catch (err) {
        updateStatus(index, "ERROR", "ERROR");
    }
}

async function runHealthChecks() {
    for (let i = 0; i < services.length; i++) {
        checkService(services[i], i);
    }
}
</script>

