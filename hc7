<body>
    <div class="health-monitor">
        <div id="messageBanner"></div>

        <div class="controls">
            <button class="btn btn-primary" id="checkBtn" onclick="window.checkServers()">
                ðŸ”„ Check All Servers
            </button>
            <div class="summary">
                <div class="summary-item summary-total">
                    <span>Total:</span>
                    <strong id="total">0</strong>
                </div>
                <div class="summary-item summary-up">
                    <span>âœ“ Up:</span>
                    <strong id="up">0</strong>
                </div>
                <div class="summary-item summary-down">
                    <span>âœ— Down:</span>
                    <strong id="down">0</strong>
                </div>
            </div>
        </div>

        <div class="servers-grid" id="grid"></div>

        <div class="last-checked" id="lastChecked"></div>
    </div>

    <script>
        (function() {
            const CONFIG = {
                backendUrl: 'http://localhost:5000'
            };

            function showMessage(msg, type) {
                const banner = document.getElementById('messageBanner');
                banner.innerHTML = '<div class="message-banner banner-' + type + '">' + msg + '</div>';
                if (type === 'success') {
                    setTimeout(function() { banner.innerHTML = ''; }, 5000);
                }
            }

            function createCard(server) {
                const status = server.status || 'down';
                const isUp = status === 'up';
                const badge = isUp ? 'status-up' : 'status-down';
                const badgeText = isUp ? 'âœ“ UP' : 'âœ— DOWN';
                
                let details = '';
                if (isUp && server.data) {
                    details = '<div class="detail-row"><span class="detail-label">Status:</span><span class="detail-value" style="color:#006644;font-weight:600">' + (server.data.status || 'UP') + '</span></div>';
                    details += '<div class="detail-row"><span class="detail-label">Response:</span><span class="detail-value">' + (server.responseTime || 'N/A') + '</span></div>';
                    if (server.data.components) {
                        details += '<div class="detail-row"><span class="detail-label">Components:</span><span class="detail-value">' + Object.keys(server.data.components).length + '</span></div>';
                    }
                } else {
                    details = '<div class="detail-row"><span class="detail-label">Status:</span><span class="detail-value" style="color:#DE350B;font-weight:600">DOWN</span></div>';
                    if (server.error) {
                        details += '<div class="error-message">' + server.error + '</div>';
                    }
                }
                
                return '<div class="server-card ' + status + '">' +
                    '<div class="server-header">' +
                    '<div class="server-name">' + server.name + '</div>' +
                    '<span class="status-badge ' + badge + '">' + badgeText + '</span>' +
                    '</div>' +
                    '<div class="server-url">' + server.url + '</div>' +
                    '<div>' + details + '</div>' +
                    '</div>';
            }

            window.checkServers = function() {
                const btn = document.getElementById('checkBtn');
                const grid = document.getElementById('grid');
                
                btn.disabled = true;
                btn.innerHTML = '<span class="loader"></span> Checking...';
                grid.innerHTML = '<div style="grid-column:1/-1;text-align:center;padding:30px;color:#6B778C">Checking servers...</div>';
                
                fetch(CONFIG.backendUrl + '/api/health/check-all')
                    .then(function(response) {
                        if (!response.ok) throw new Error('Backend returned ' + response.status);
                        return response.json();
                    })
                    .then(function(data) {
                        if (data.servers && data.servers.length > 0) {
                            grid.innerHTML = data.servers.map(createCard).join('');
                            document.getElementById('total').textContent = data.summary.total;
                            document.getElementById('up').textContent = data.summary.up;
                            document.getElementById('down').textContent = data.summary.down;
                            document.getElementById('lastChecked').textContent = 'Last checked: ' + data.summary.timestamp;
                            showMessage('Health check completed!', 'success');
                        } else {
                            grid.innerHTML = '<div style="grid-column:1/-1;text-align:center;padding:30px;color:#6B778C">No servers configured</div>';
                            showMessage('No servers configured in backend', 'error');
                        }
                    })
                    .catch(function(error) {
                        console.error('Error:', error);
                        grid.innerHTML = '<div style="grid-column:1/-1;text-align:center;padding:30px;color:#DE350B">Failed to connect to backend</div>';
                        showMessage('Error: ' + error.message + '. Check if backend is running on ' + CONFIG.backendUrl, 'error');
                    })
                    .finally(function() {
                        btn.disabled = false;
                        btn.innerHTML = 'ðŸ”„ Check All Servers';
                    });
            };

            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function() {
                    setTimeout(window.checkServers, 500);
                });
            } else {
                setTimeout(window.checkServers, 500);
            }
        })();
    </script>
</body>
</html>